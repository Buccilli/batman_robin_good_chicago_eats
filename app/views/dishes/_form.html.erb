<% was_validated = dish.errors.any? %>

<%= form_with(model: dish, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% must_get_class = "form-control" %>
    <% must_get_was_invalid = dish.errors.include?(:must_get) %>

    <% if was_validated %>
      <% if must_get_was_invalid %>
        <% must_get_class << " is-invalid" %>
      <% else %>
        <% must_get_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :must_get %>
    <%= f.text_field :must_get, class: must_get_class, placeholder: "Enter must get" %>
    <% if must_get_was_invalid %>
      <% dish.errors.full_messages_for(:must_get).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% never_ever_again_class = "form-control" %>
    <% never_ever_again_was_invalid = dish.errors.include?(:never_ever_again) %>

    <% if was_validated %>
      <% if never_ever_again_was_invalid %>
        <% never_ever_again_class << " is-invalid" %>
      <% else %>
        <% never_ever_again_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :never_ever_again %>
    <%= f.text_field :never_ever_again, class: never_ever_again_class, placeholder: "Enter never ever again" %>
    <% if never_ever_again_was_invalid %>
      <% dish.errors.full_messages_for(:never_ever_again).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% restaurant_class = "form-control" %>
    <% restaurant_was_invalid = dish.errors.include?(:restaurant) %>

    <% if was_validated %>
      <% if restaurant_was_invalid %>
        <% restaurant_class << " is-invalid" %>
      <% else %>
        <% restaurant_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :restaurant_id %>
    <%= f.collection_select :restaurant_id, Restaurant.all, :id, :to_s, {}, class: "form-control" %>
    <% if restaurant_was_invalid %>
      <% dish.errors.full_messages_for(:restaurant).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% distance_to_joey_class = "form-control" %>
    <% distance_to_joey_was_invalid = dish.errors.include?(:distance_to_joey) %>

    <% if was_validated %>
      <% if distance_to_joey_was_invalid %>
        <% distance_to_joey_class << " is-invalid" %>
      <% else %>
        <% distance_to_joey_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :distance_to_joey_id %>
    <%= f.number_field :distance_to_joey_id, class: distance_to_joey_class, placeholder: "Enter distance to joey" %>
    <% if distance_to_joey_was_invalid %>
      <% dish.errors.full_messages_for(:distance_to_joey).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% added_by_class = "form-control" %>
    <% added_by_was_invalid = dish.errors.include?(:added_by) %>

    <% if was_validated %>
      <% if added_by_was_invalid %>
        <% added_by_class << " is-invalid" %>
      <% else %>
        <% added_by_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :added_by %>
    <%= f.number_field :added_by, class: added_by_class, placeholder: "Enter added by" %>
    <% if added_by_was_invalid %>
      <% dish.errors.full_messages_for(:added_by).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
