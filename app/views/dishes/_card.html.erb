<div class="card mb-3">
  <h2 class="card-header h4">
    Dish #<%= dish.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Must get</dt>
      <dd><%= dish.must_get %></dd>

      <dt>Never ever again</dt>
      <dd><%= dish.never_ever_again %></dd>

      <dt>Restaurant</dt>
      <dd>
        <% if @dish.restaurant.present? %>
          <%= link_to dish.restaurant, dish.restaurant %>
        <% end %>
      </dd>

      <dt>Distance to joey</dt>
      <dd><%= dish.distance_to_joey_id %></dd>

      <dt>Added by</dt>
      <dd><%= dish.added_by %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back dish, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_dish_url(dish), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to dish, method: :delete, data: { confirm: "Do you really want to delete this dish?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(dish.updated_at) %> ago
  </div>
</div>
