<%= form_with(model: @restaurant, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :good_service %>

    <%= f.text_field :good_service, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :distance_to_joey %>

    <%= f.text_field :distance_to_joey, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>

    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :other_comments %>

    <%= f.text_field :other_comments, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cuisine %>

    <%= f.text_field :cuisine, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :neighborhood %>

    <%= f.text_field :neighborhood, class: "form-control" %>
  </div>

  <%= f.hidden_field :service_id, value: @service.id %>

  <div class="form-group">
    <%= f.label :added_by %>

    <%= f.text_field :added_by, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :desire_to_go_to_restaurant %>

    <%= f.text_field :desire_to_go_to_restaurant, class: "form-control" %>
  </div>

  <%= f.submit "Create restaurant", class: "btn btn-block btn-outline-secondary" %>
<% end %>
