<div class="card mb-3">
  <h2 class="card-header h4">
    Restaurant #<%= restaurant.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Good service</dt>
      <!-- Display good_service start -->
      <dd><%= restaurant.good_service %></dd>
      <!-- Display good_service end -->

      <dt>Distance to joey</dt>
      <!-- Display distance_to_joey start -->
      <dd><%= restaurant.distance_to_joey %></dd>
      <!-- Display distance_to_joey end -->

      <dt>Price</dt>
      <!-- Display price start -->
      <dd><%= restaurant.price %></dd>
      <!-- Display price end -->

      <dt>Other comments</dt>
      <!-- Display other_comments start -->
      <dd><%= restaurant.other_comments %></dd>
      <!-- Display other_comments end -->

      <dt>Cuisine</dt>
      <!-- Display cuisine start -->
      <dd><%= restaurant.cuisine %></dd>
      <!-- Display cuisine end -->

      <dt>Name</dt>
      <!-- Display name start -->
      <dd><%= restaurant.name %></dd>
      <!-- Display name end -->

      <dt>Neighborhood</dt>
      <!-- Display neighborhood start -->
      <dd><%= restaurant.neighborhood %></dd>
      <!-- Display neighborhood end -->

      <dt>Service</dt>
      <!-- Display service_id start -->
      <dd>
        <% if @restaurant.service.present? %>
          <%= link_to restaurant.service, restaurant.service %>
        <% end %>
      </dd>
      <!-- Display service_id end -->

      <dt>Added by</dt>
      <!-- Display added_by start -->
      <dd><%= restaurant.added_by %></dd>
      <!-- Display added_by end -->

      <dt>Desire to go to restaurant</dt>
      <!-- Display desire_to_go_to_restaurant start -->
      <dd><%= restaurant.desire_to_go_to_restaurant %></dd>
      <!-- Display desire_to_go_to_restaurant end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back restaurant, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link restaurant start -->
      <div class="col">
        <%= link_to edit_restaurant_url(restaurant), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link restaurant end -->

      <!-- Delete link restaurant start -->
      <div class="col">
        <%= link_to restaurant, method: :delete, data: { confirm: "Do you really want to delete this restaurant?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link restaurant end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(restaurant.updated_at) %> ago
  </div>
</div>
