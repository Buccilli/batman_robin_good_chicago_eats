<div class="card mb-3">
  <h2 class="card-header h4">
    Restaurant #<%= restaurant.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Good service</dt>
      <dd><%= restaurant.good_service %></dd>

      <dt>Distance to joey</dt>
      <dd><%= restaurant.distance_to_joey %></dd>

      <dt>Price</dt>
      <dd><%= restaurant.price %></dd>

      <dt>Other comments</dt>
      <dd><%= restaurant.other_comments %></dd>

      <dt>Cuisine</dt>
      <dd><%= restaurant.cuisine %></dd>

      <dt>Name</dt>
      <dd><%= restaurant.name %></dd>

      <dt>Neighborhood</dt>
      <dd><%= restaurant.neighborhood %></dd>

      <dt>Service</dt>
      <dd><%= restaurant.service_id %></dd>

      <dt>Added by</dt>
      <dd><%= restaurant.added_by %></dd>

      <dt>Desire to go to restaurant</dt>
      <dd><%= restaurant.desire_to_go_to_restaurant %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back restaurant, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_restaurant_url(restaurant), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to restaurant, method: :delete, data: { confirm: "Do you really want to delete this restaurant?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(restaurant.updated_at) %> ago
  </div>
</div>
