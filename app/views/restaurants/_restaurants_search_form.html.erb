<%= search_form_for @q, :class => collapse_search_form, :id => "restaurants_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :good_service_cont, "Good service contains" %>
    <%= f.text_field :good_service_cont, :class => "form-control", :placeholder => "Good service contains" %>
  </div>

  <div class="form-group">
    <%= f.label :desire_to_go_to_restaurant, "Desire to go to restaurant" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :desire_to_go_to_restaurant_gteq, :class => "form-control", :placeholder => "Desire to go to restaurant greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :desire_to_go_to_restaurant_lteq, :class => "form-control", :placeholder => "Desire to go to restaurant less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :added_by, "Added by" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :added_by_gteq, :class => "form-control", :placeholder => "Added by greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :added_by_lteq, :class => "form-control", :placeholder => "Added by less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :neighborhood_cont, "Neighborhood contains" %>
    <%= f.text_field :neighborhood_cont, :class => "form-control", :placeholder => "Neighborhood contains" %>
  </div>

  <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :cuisine_cont, "Cuisine contains" %>
    <%= f.text_field :cuisine_cont, :class => "form-control", :placeholder => "Cuisine contains" %>
  </div>

  <div class="form-group">
    <%= f.label :other_comments_cont, "Other comments contains" %>
    <%= f.text_field :other_comments_cont, :class => "form-control", :placeholder => "Other comments contains" %>
  </div>

  <div class="form-group">
    <%= f.label :price, "Price" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :price_gteq, :class => "form-control", :placeholder => "Price greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :price_lteq, :class => "form-control", :placeholder => "Price less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :distance_to_joey, "Distance to joey" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :distance_to_joey_gteq, :class => "form-control", :placeholder => "Distance to joey greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :distance_to_joey_lteq, :class => "form-control", :placeholder => "Distance to joey less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :dishes_must_get_cont, "Dishes must_get contains" %>
    <%= f.text_field :dishes_must_get_cont, :class => "form-control", :placeholder => "Dishes must_get contains" %>
  </div>

  <div class="form-group">
    <%= f.label :service_server_name_cont, "Service server_name contains" %>
    <%= f.text_field :service_server_name_cont, :class => "form-control", :placeholder => "Service server_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/restaurants" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#restaurants_filters">
  Show filters
</a>
