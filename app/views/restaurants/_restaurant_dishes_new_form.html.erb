<%= form_with(model: @dish, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :must_get %>

    <%= f.text_field :must_get, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :never_ever_again %>

    <%= f.text_field :never_ever_again, class: "form-control" %>
  </div>

  <%= f.hidden_field :restaurant_id, value: @restaurant.id %>

  <div class="form-group">
    <%= f.label :distance_to_joey_id %>

    <%= f.text_field :distance_to_joey_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :added_by %>

    <%= f.text_field :added_by, class: "form-control" %>
  </div>

  <%= f.submit "Create dish", class: "btn btn-block btn-outline-secondary" %>
<% end %>
