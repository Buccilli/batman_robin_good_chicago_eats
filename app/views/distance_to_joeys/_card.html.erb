<div class="card mb-3">
  <h2 class="card-header h4">
    Distance To Joey #<%= distance_to_joey.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Restaurant</dt>
      <dd>
        <% if @distance_to_joey.restaurant.present? %>
          <%= link_to distance_to_joey.restaurant, distance_to_joey.restaurant %>
        <% end %>
      </dd>

      <dt>Minutes walking</dt>
      <dd><%= distance_to_joey.minutes_walking %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back distance_to_joey, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_distance_to_joey_url(distance_to_joey), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to distance_to_joey, method: :delete, data: { confirm: "Do you really want to delete this distance_to_joey?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(distance_to_joey.updated_at) %> ago
  </div>
</div>
